<h1 class="text-center">Listing Farmers Market</h1><br /><br />
<% @restaurants.each do |restaurant| %>
<div class="hero-unit">
	<table class="table table-striped table-hover" >
		<h3><%= restaurant.name %></h3>
		<br />
		<tr>
			<th>Address</th>
			<td><%= restaurant.address %></td>
		</tr>
		<tr>
		    <th>Operator</th>
	        <td><%= restaurant.operator %></td>
		</tr>
		<tr>
		    <th>Accepts Supplemental Nutrition Assistance Program</th>
	        <td><%= restaurant.accept_sna %></td>
		</tr>
		<tr>
		    <th>Accepts Farmers' Market Nutrition Program</th>
	        <td><%= restaurant.accept_fmn %></td>
		</tr>
		
		<tr>
		    <th>Distributes Food Bucks</th>
	        <td><%= restaurant.destribute %></td>
			
		</tr>
		<tr>
		    <th>Only Redeem Food Bucks</th>
	        <td><%= restaurant.only_redee %></td>
			
		</tr>
		<tr>
		    <th>EBT machine at the market</th>
	        <td><%= restaurant.ebt_machin %></td>
		</tr>
		<tr>
		    <th>Day and time of operation</th>
	        <td><%= restaurant.day_time %></td>
		</tr>
		<tr>
			<th>Google the position!</th>
			<td><a href="http://maps.google.com/?q=<%= restaurant.lat %>,<%= restaurant.lon %>">Google!</a></td>
	</table>
	<%= link_to 'Show Comments', restaurant_path(restaurant) %>&nbsp;&nbsp;&nbsp;
	<%= link_to 'Update', edit_restaurant_path(restaurant) %>&nbsp;&nbsp;&nbsp;
	<%= link_to 'Delete the Market', restaurant_path(restaurant),
		  	                method: :delete,
		  	                data: { confirm: 'Are you sure?' } %>
</div>
	<br /><br />
	<% end %>