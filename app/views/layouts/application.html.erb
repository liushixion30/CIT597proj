<!DOCTYPE html>
<html>
<head>
	<title>Marketapp</title>
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	<%= csrf_meta_tags %>
</head>
<body>
	<div id="user_nav">
		<% if current_user %>
		<div class="alert alert-success" role="alert">Logged in as <%= current_user.email %></div>
		<p class="text-right"><%= link_to "Log out", log_out_path %></p>
		<% else %>
		<p class="text-right"><%= link_to "Sign up", sign_up_path %> or 
		<%= link_to "Log in", log_in_path %></p>
		<% end %>
	</div>

    
	<% flash.each do |name, msg| %>
	<div class="alert" role="alert">
	<%= content_tag :div, msg, :id => "flash#{name}" %>
	</div>
	<% end %>
    
	
	<%= yield %>


</body>
</html>

