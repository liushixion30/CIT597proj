<div class="jumbotron">
<h1 class="text-center">Log in</h1>

<%= form_tag sessions_path do %>
  <p class="text-center">
    <%= label_tag :email %><br />
    <%= text_field_tag :email, params[:email] %>
  </p>
  <p class="text-center">
    <%= label_tag :password %><br />
    <%= password_field_tag :password %>
  </p>
<div class="span2 offset7">
  <%= submit_tag("Login", :class => "btn btn-primary" ) %>
</div>
<% end %>
</div>
